        		<div class="logo_left"><img src="../../images/flogo.jpg" /></div>

                <div class="signin">

                	<table width="412px" border="0" cellspacing="0" cellpadding="0">

                      <tr>
                        <td height="20px">Email</td>

                        <td>Password</td>

                        <td></td>

                      </tr>

                      <tr>

                        <td width="153"><input type="text" name="email" class="singin_textbox" style="border:0"/></td>

                        <td width="153"><input type="password" name="Password" class="singin_textbox" style="border:0"/></td>

                        <td align="left"><input type="submit" value="Login" class="signin_btn"/></td>

                      </tr>

                      <tr>

                        <td>&nbsp;&nbsp;&nbsp;</td>

                        <td><a href="../Account/forgetPassword" class="forgot">Forgot your password?</a></td>

                        <td>&nbsp;&nbsp;&nbsp;</td>

                      </tr>

                    </table>

                </div>

        </div>

</div>
}
<div class="menu_first">

		<div class="fmenu_con">

		   <div id="nav-menu-first">

                            <ul>
                                <li><a href="@Url.Content("~/Account/jobHome")" >Browse Job</a></li>
                                <li><a href="@Url.Content("~/Account/EmployerLogin")">Employer Login</a></li>
                                <li><a href="@Url.Content("~/personalDetail/Create")">Create Resume</a></li>                                
                                <li><a href="@Url.Content("~/Account/ContactUs")">Contact Us</a> </li>
                                <li><a href="@Url.Content("~/Account/ourlocation")">Our Location</a> </li>
