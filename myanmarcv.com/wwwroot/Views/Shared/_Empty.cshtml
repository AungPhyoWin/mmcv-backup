                                    {
                                        <li><a href="@Url.Content("~/personalDetail/MyAccount")">My Account</a></li>
                                    }
                                       
                              </ul>

             		    </div>

             </div>

</div>
  <section id="main">
            @RenderBody()
  </section>
</body>
</html>
