@model Uco.Models.Captcha
<div class="editor-label">
    @Html.LabelFor(model => model.CaptchaValue)
</div>
<div class="editor-field">
    <img src='@Url.Content("~/Captcha/Show")' alt="" class="captcha_img" />
    @Html.TextBoxFor(m => m.CaptchaValue, new { @class = "captcha_input" })
    @Html.ValidationMessageFor(model => model.CaptchaValue)
    <br class="clear" />
</div>