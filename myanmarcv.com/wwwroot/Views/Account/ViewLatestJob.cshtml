@model IEnumerable<MyanmarCV.Models.jobAdvertisment>

@{
    ViewBag.Title = "ViewLatestJob";
    Layout = "~/Views/Shared/_Main.cshtml";
}
<body id="brjob_link">

<div style="width:900px; margin:0 auto;display:table;">
                        		<div style="width:850px; margin:0px 15px 7px 8px;  margin:0 auto;">
                                    <br />
                                    		<table border="0" cellspacing="0" cellpadding="0">
                                                  <tr>
                                                    <td style="background:url('../../images/main_left.jpg') no-repeat; height:35px; width:11px;"></td>
                                                    <td style="font-family: Calist;font-size:18px;background:url('../../images/main_body.jpg') repeat-x;height:35px;width:850px; text-align:left; ">View Latest Jobs</td>
                                                    <td style="background:url('../../images/main_right.jpg') no-repeat; height:35px;width:11px;"></td>
                                                  </tr>
                                                  <tr>
                                                  	<td colspan="3" style="border-left:1px solid #dad8d9; border-right:1px solid #dad8d9;">
                                                 		@foreach (var item in Model) {
                                                           <div style="margin:10px 10px 0px 10px; border:1px solid #dfdfdf; text-align:left; padding:10px">
                                                           
                                                                <div class="view_job_header">Job Position: <u>@Html.DisplayFor(modelItem => item.jobPosition)</u></div><div style="float:right"><a href="@Url.Content("~/Account/ViewLatestJobDetail/?advId=")@Html.DisplayFor(modelItem => item.jobAdvertismentId)""&pageNo=1"> <img src="../../images/detail_view.jpg" /></a></div>
                                                                <div style="font-size:12px"><br /><br />Job Description: @Html.DisplayFor(modelItem => item.jobDescription)</div>
                                                           </div>
                                                           <div class="job_detail">Posted Date:  @Html.DisplayFor(modelItem => item.modifiedDate)<span style="padding-left:100px">Experience:  @Html.DisplayFor(modelItem => item.yearOfExperienceRequired) year</span></div>
                                                         }
                                                       </td>
                                                 </tr>
                                                 <tr>
                                                 	<td style="background-image:url('../../images/main_bot_left.jpg'); height:9px; background-repeat:no-repeat;"></td>
                                                    <td style="border-bottom:1px solid #dad8d9;"></td>
                                                    <td style="background-image:url('../../images/main_bot_right.jpg');height:9px; background-repeat:no-repeat;"></td>
                                                 </tr>
                                                </table>
                                 
                                </div>
      </div> 
      <div>
      
      </div>
</body>